<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 设置边框颜色和宽度 -->
    <stroke
        android:width="0dp"
        android:color="#000000" /> <!-- 改为你想要的颜色 -->

    <!-- 设置填充颜色 -->
    <solid android:color="#DEDEDE" /> <!-- 白色背景 -->

    <!-- 设置圆角半径 -->
    <corners android:radius="16dp" /> <!-- 圆角半径，可以根据需要调整 -->

</shape>